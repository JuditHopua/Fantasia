{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Carpinteria list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Alto</th>
                <th>Ancho</th>
                <th>Premarco</th>
                <th>Contramarco</th>
                <th>Cantidad</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('carpinteria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.alto }}</td>
                <td>{{ entity.ancho }}</td>
                <td>{{ entity.premarco }}</td>
                <td>{{ entity.contramarco }}</td>
                <td>{{ entity.cantidad }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('carpinteria_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('carpinteria_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('carpinteria_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
