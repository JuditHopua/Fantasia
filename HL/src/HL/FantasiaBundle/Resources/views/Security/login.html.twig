{% extends "FOSUserBundle::layout.html.twig" %}

{%block head%}
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- <link href="css/bootstrap-responsive.min.css" rel="stylesheet"> -->

{% stylesheets
   '@FantasiaBundle/Resources/public/css/bootstrap.min.css'
   '@FantasiaBundle/Resources/public/css/portada.css' %}
   <link rel="stylesheet" href="{{asset_url}}" />
{% endstylesheets %}

{% javascripts 
   '@FantasiaBundle/Resources/public/js/jquery.js' 
   '@FantasiaBundle/Resources/public/js/bootstrap.min.js' %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}

<title> - Fantasia - </title>

{%endblock%}
{% block fos_user_content %}
   <body>
   <div id="page-wrapper">
        <div id="main">
             {% if error %}
             <div id="login-error">{{ error.message|trans }}</div>
             {% endif %}
             <form action="{{ path('login_check') }}" method="post" >
                   <input type="hidden" name="_csrf_token" value="{FantasiaBundle:Security:getToken}" />
                   <div class="form-item">
                        <label for="username">Usuario</label>
                        <input id="username" type="text" name="_username" value="{{ last_username }}" />
                   </div>
                   <div class="form-item">
                        <label for="password">Contraseña</label>
                        <input id="password" type="password" name="_password" />
                   </div>
                   <input type="submit" name="login" value="Iniciar sesión" />
             </form>
        </div>
   </div>
   </body>
{% endblock fos_user_content %}
