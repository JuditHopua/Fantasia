{% extends 'FantasiaBundle:Default:base.html.twig' %}

{% block title %} Listado Clientes {% endblock %}

{% block contenido %}
<script type="text/javascript">
    $( document ).ready(function() {
	    $('#tabla').dataTable( {
		"language": {
             "url": "//cdn.datatables.net/plug-ins/1.10.10/i18n/Spanish.json"
        },
		"sDom": "<'row'<'span8'l><'span8'f>r>t<'row'<'span8'i><'span8'p>>"
		} );
	});
</script>	
	{% include 'FantasiaBundle:Default:menu.html.twig' %}
    <h1>Listado de clientes</h1>
	
    <table class="table table-striped" id="tabla">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Domicilio</th>
                <th>Observaciones</th>
                <th>Acci&oacute;n</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
			<tr>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.domicilio }}</td>
                <td>{{ entity.observaciones }}</td>
				<td>
					<a href="{{ path('cliente_edit', { 'id': entity.id }) }}" ><span class="glyphicon glyphicon-pencil"></span></a>
				
					<a href="{{ path('cliente_delete', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-trash"></span></a>
				
				</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	
    {% endblock %}
